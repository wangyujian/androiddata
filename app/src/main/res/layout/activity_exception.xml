<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.example.yujan.android_data.sjms.SJMSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需求：APP异常（报错/闪退）处理"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="详情：模拟访问获取空对象的值"
            android:textColor="#666666"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1）异常类监听异常日志，保存本地或者上传服务器"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_exception_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求" />

        <TextView
            android:id="@+id/tv_exception_api_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="报错日志："
            android:textColor="#666666"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2）接入第三方平台（极光/Bugly）"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_exception_third_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求" />

        <TextView
            android:id="@+id/tv_exception_third_party_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="报错日志："
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
